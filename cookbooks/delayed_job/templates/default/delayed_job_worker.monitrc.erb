check process <%= @worker_name %>
  with pidfile /data/<%= @app_name %>/shared/pids/<%= @worker_name %>.pid
  start program = "/bin/su <%= @user %> -c 'RAILS_ENV=<%= @framework_env %> /data/<%= @app_name %>/current/script/delayed_job start'"
  stop program = "/bin/su <%= @user %> -c 'RAILS_ENV=<%= @framework_env %> /data/<%= @app_name %>/current/script/delayed_job stop'"
  group <%= @app_name %>_jobs
